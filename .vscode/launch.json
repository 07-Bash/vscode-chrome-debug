{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "launch as server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/out/src/chromeDebug.js",
			"runtimeArgs": ["--harmony"],
            "stopOnEntry": false,
            "args": [ "--server=4712" ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out"
        },
        {
            "name": "test",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "stopOnEntry": false,
            "args": [ "test" ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out"
        }
    ]
}
